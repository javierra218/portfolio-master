---
import Icon from "astro-icon";
import { Image } from "astro:assets";
import JonMaddogHall from "../../assets/img/jonmaddoghall.jpeg";

const info = {
  title: "Testimonials",
  seeAll: {
    text: "See all in",
    url: "https://www.linkedin.com/in/javierra218/details/recommendations/?detailScreenTabIndex=0",
    icon: "mdi:linkedin",
  },
  testimonials: [
    {
      name: "",
      picture: JonMaddogHall,
      role: "",
      company: "",
      reference: "",
    },
  ],
};
---

<div
  class="w-full mx-w-xl md:max-w-6xl bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 mb-2"
>
  <div class="flex flex-col items-center pb-10 mt-8 flex-wrap">
    <span class="text-slate-900 font-bold md:text-2xl">{info.title}</span>
    <hr />
    <div class="grid grid-cols-1 md:grid-cols-3 md:gap-4">
      {
        info.testimonials.map((testimonial) => (
          <div class="flex flex-col items-center mt-4 bg-slate-50 rounded-md max-w-xs w-96">
            <Image
              src={testimonial.picture}
              alt={testimonial.name}
              class="w-24 h-24 md:w-32 md:h-32 rounded-full object-cover mt-4"
            />
            <h2 class="text-gray-800 dark:text-white text-md md:text-xl font-medium title-font mt-4">
              {testimonial.name}
            </h2>
            <div class="text-gray-500 dark:text-gray-300 text-xs md:text-sm font-semibold title-font uppercase mt-1">
              {testimonial.role}
            </div>
            <div class="text-gray-500 dark:text-gray-300 text-xs md:text-sm font-semibold title-font uppercase mt-1">
              {testimonial.company}
            </div>
            <div class="w-16 h-1 bg-blue-800 rounded mt-2 mb-4" />
            <p class="text-gray-600 dark:text-gray-400 px-10 mb-4 text-justify text-xs md:text-sm">
              {testimonial.reference}
            </p>
          </div>
        ))
      }
    </div>

    <div>
      <a
        href={info.seeAll.url}
        target="_blank"
        class="text-white bg-blue-900 hover:bg-blue-800 p-2 rounded-md inline-flex items-center mt-3"
      >
        {info.seeAll.text}
        <Icon name={info.seeAll.icon} class="w-6 h-6 ml-2" />
      </a>
    </div>
  </div>
</div>
