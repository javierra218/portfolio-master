---
import Icon from 'astro-icon';

const info = {
  title: "My Certificates",
  categories: [
    {
      category: "Desarrollo Web",
      certificates: [
        {
          name: "Angular 17: Creación de Aplicaciones Web",
          link: "https://platzi.com/p/javierra/curso/8352-angular/diploma/detalle/",
          icon: "simple-icons:angular",
        },
        {
          name: "Certificado de React",
          link: "https://www.ejemplo.com/certificado/react",
          icon: "akar-icons:react-fill",
        },
      ],
    },
    {
      category: "Backend",
      certificates: [
        {
          name: "Symfony 6: Creación de API REST",
          link: "https://platzi.com/p/javierra/curso/7989-api-rest-symfony/diploma/detalle/",
          icon: "simple-icons:symfony",
        },
        
      ],
    },
    {
      category: "Cloud",
      certificates: [
        {
          name: "Certificado de AWS",
          link: "https://www.ejemplo.com/certificado/aws",
          icon: "simple-icons:amazonaws",
        },
        {
          name: "Certificación de AWS Cloud Practitioner",
          link: "https://platzi.com/p/javierra/ruta/8401-aws-cloud-practitioner/diploma/detalle/",
          icon: "simple-icons:amazonaws",
        },
      ],
    },
    // Añade más categorías y certificados según sea necesario
  ],
};
---

<div class="w-full max-w-6xl mx-auto bg-white dark:bg-gray-800 rounded-lg shadow-md mb-8">
  <div class="flex flex-col items-center py-10 px-6 md:px-10">
    <h2 class="text-slate-900 dark:text-white font-bold text-2xl md:text-3xl mb-8 text-center">{info.title}</h2>
    <hr class="w-full border-gray-300 dark:border-gray-700 mb-8" />
    {info.categories.map((category) => (
      <div class="w-full mb-8">
        <h3 class="text-slate-900 dark:text-gray-300 font-semibold text-xl mb-4">{category.category}</h3>
        <div class="flex flex-wrap gap-4">
          {category.certificates.map((certificate) => (
            <div class="flex items-center bg-slate-100 dark:bg-gray-700 p-2 rounded-md shadow-sm">
              <a
                href={certificate.link}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center no-underline hover:underline"
              >
                <Icon class="w-4 h-4 text-blue-500 dark:text-blue-400 mr-2" name={certificate.icon} />
                <span class="text-slate-900 dark:text-gray-200 text-md font-medium">{certificate.name}</span>
              </a>
            </div>
          ))}
        </div>
      </div>
    ))}
  </div>
</div>
