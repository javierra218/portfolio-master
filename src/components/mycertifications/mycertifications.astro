---
import Icon from 'astro-icon';

const info = {
  title: "My Certificates",
  categories: [
    {
      category: "Desarrollo Web",
      certificates: [
        {
          name: "Certificado de JavaScript Avanzado",
          link: "https://www.ejemplo.com/certificado/javascript-avanzado",
          icon: "simple-icons:javascript",
        },
        {
          name: "Certificado de React",
          link: "https://www.ejemplo.com/certificado/react",
          icon: "akar-icons:react-fill",
        },
      ],
    },
    {
      category: "Cloud",
      certificates: [
        {
          name: "Certificado de AWS",
          link: "https://www.ejemplo.com/certificado/aws",
          icon: "simple-icons:amazonaws",
        },
        {
          name: "Certificado de Azure",
          link: "https://www.ejemplo.com/certificado/azure",
          icon: "simple-icons:microsoftazure",
        },
      ],
    },
    // Añade más categorías y certificados según sea necesario
  ],
};
---

<div class="w-full max-w-xl md:max-w-6xl bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 mb-2 md:pl-44 md:pr-44">
  <div class="flex flex-col pb-10 mt-8">
    <span class="text-slate-900 font-bold text-center md:text-2xl">{info.title}</span>
    {info.categories.map((category, categoryIndex) => (
    <div class="flex flex-col items-start ml-6 mt-4">
        <span class="text-slate-900 font-bold text-sm md:text-xl">{category.category}</span>
        <hr class="w-full border-gray-300 my-2" />
        <div class="flex flex-row items-center mt-2 flex-wrap p-1">
          {category.certificates.map((certificate, certificateIndex) => (
            <div class="flex flex-col items-center mt-2">
              <div class="flex flex-row items-center">
                <a
                  href={certificate.link}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="bg-slate-100 rounded-md text-xs md:text-sm p-1 ml-2 flex items-center no-underline hover:underline"
                >
                  <Icon
                    class="w-4 h-4 mr-1 text-gray-500"
                    name={certificate.icon}
                  />
                  <span>{certificate.name}</span>
                </a>
              </div>
            </div>
          ))}
        </div>
      </div>
    ))}
  </div>
</div>
