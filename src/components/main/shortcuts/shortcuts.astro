---
import Icon from "astro-icon";
const info = {
  shortcuts: [
    {
      name: "Skills",
      path: "/skills",
      icon: "ph:brain-light",
    },
    {
      name: "Experience",
      path: "/experience",
      icon: "mdi:work-outline",
    },
    {
      name: "Certifications",
      path: "/certifications",
      icon: "bx:bx-certification",
    }
  ],
};
---

<div class="w-full max-w-6xl bg-white border border-gray-200 rounded-lg shadow-lg dark:bg-gray-800 dark:border-gray-700 mb-8">
  <div class="flex flex-col items-center py-10 px-6 md:px-10">
    <h2 class="text-slate-900 font-bold text-2xl md:text-3xl mb-8">Más sobre mí</h2>
    <hr class="w-full border-gray-300 mb-6" />
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 md:gap-16">
      {info.shortcuts.map((shortcut) => (
        <a
          href={shortcut.path}
          class="group flex flex-col items-center bg-slate-100 hover:bg-blue-900 rounded-lg p-6 transition duration-300 transform hover:-translate-y-1 shadow-md hover:shadow-xl cursor-pointer"
        >
          <Icon
            class="w-12 h-12 mb-4 text-blue-900 group-hover:text-white"
            name={`${shortcut.icon}`}
          />
          <span class="text-lg font-bold text-blue-900 group-hover:text-white">
            {shortcut.name}
          </span>
        </a>
      ))}
    </div>
  </div>
</div>
