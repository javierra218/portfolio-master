---
import { Icon } from "astro-icon";
import { Image } from "astro:assets";
import Javierra from "../../../assets/img/javierra.jpg";

const info = {
  name: "Javier Enrique Rojas Agredo",
  role: "Ingeniero de Sistemas",
  secondRole: "Desarrollador de Software",
  education: [],
  picture: Javierra,
  socialNetworks: [
    {
      name: "linkedin",
      url: "https://www.linkedin.com/in/javierra218/",
      icon: "ri:linkedin-fill",
    },
    {
      name: "github",
      url: "https://github.com/javierra218",
      icon: "mdi:github",
    },
    {
      name: "instagram",
      url: "https://instagram.com/rojas218",
      icon: "ri:instagram-line",
    },
    {
      name: "twitter",
      url: "https://twitter.com/rojas218",
      icon: "mdi:twitter",
    },
  ],
  cv: {
    url: "https://flowcv.com/resume/nts84o9wi9",
    icon: "bi:download",
  },
  email: {
    url: "mailto:javierra@unicauca.edu.co",
    icon: "mdi-light:email",
  },
};
---

<div
  class="w-full max-w-6xl mx-auto bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 mb-8"
>
  <div class="flex flex-col items-center pb-10 mt-8">
    <Image
      class="w-24 h-24 md:w-48 md:h-48 mb-3 rounded-full shadow-lg"
      src={info.picture}
      alt="Javierra"
    />
    <h5
      class="mb-1 text-xl md:text-3xl font-medium text-gray-900 dark:text-white"
    >
      {info.name}
    </h5>
    <span class="text-sm md:text-xl text-gray-500 dark:text-gray-400"
      >{info.role}</span
    >
    <span class="text-xs md:text-xl text-gray-500 dark:text-gray-400"
      >{info.secondRole}</span
    >

    <div class="flex mt-4 md:mt-6 space-x-3">
      <a
        href={info.cv.url}
        class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-blue-900 rounded-lg hover:bg-blue-700 focus:ring-4 focus:ring-blue-300 dark:bg-blue-900 dark:hover:bg-blue-900 dark:focus:ring-blue-800 transition duration-300"
      >
        <Icon class="w-4 h-4" name={info.cv.icon} />
        <span class="ml-2">Resume</span>
      </a>
      <a
        href={info.email.url}
        class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700 dark:hover:border-gray-700 dark:focus:ring-gray-700 transition duration-300"
      >
        <Icon class="w-5 h-5" name={info.email.icon} />
        <span class="ml-2">Contact me</span>
      </a>
    </div>
    <div class="mt-4">
      <ul class="flex space-x-4">
        {
          info.socialNetworks.map((socialNetwork) => (
            <li>
              <a
                href={socialNetwork.url}
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-400 hover:text-blue-900 transition duration-300"
              >
                <span class="sr-only">{socialNetwork.name}</span>
                <Icon class="w-6 h-6" name={socialNetwork.icon} />
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</div>
